# Production Environment Configuration
# WARNING: This file contains sensitive information. Keep it secure!

# Database Configuration
POSTGRES_DB=bsky_automation_prod
POSTGRES_USER=bsky_prod_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=CHANGE_ME_VERY_STRONG_JWT_SECRET_HERE_AT_LEAST_32_CHARS

# API Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring Configuration
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_HERE

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance Configuration
MAX_CONNECTIONS=100
WORKER_PROCESSES=auto

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_CSRF_PROTECTION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# Domain Configuration
DOMAIN_NAME=yourdomain.com
API_SUBDOMAIN=api
DASHBOARD_SUBDOMAIN=dashboard

# Email Configuration (for alerts)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD_HERE
ALERT_EMAIL=admin@yourdomain.com

# External Services
BLUESKY_API_URL=https://bsky.social
BLUESKY_BGS_URL=https://bsky.network

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_HEALTH_CHECKS=true
ENABLE_AUTO_SCALING=false

# Resource Limits
MAX_MEMORY_PER_SERVICE=512M
MAX_CPU_PER_SERVICE=1.0
